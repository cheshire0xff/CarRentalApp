@page
@model CarRentalApp.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.VIN" class="control-label"></label>
                <input asp-for="Car.VIN" class="form-control" id="vin" />
                <span asp-validation-for="Car.VIN" class="text-danger"></span>
                <span id="result" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ModelId" class="control-label"></label>
                <input asp-for="Car.ModelId" class="form-control" />
                <span asp-validation-for="Car.ModelId" class="text-danger"></span>
                @Html.ValidationMessage("ModelId")
            </div>
            <div class="form-group">
                <label asp-for="Car.PricePerDay" class="control-label"></label>
                <input asp-for="Car.PricePerDay" class="form-control" />
                <span asp-validation-for="Car.PricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.MileageKm" class="control-label"></label>
                <input asp-for="Car.MileageKm" class="form-control" />
                <span asp-validation-for="Car.MileageKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ProductionDate" class="control-label"></label>
                <input asp-for="Car.ProductionDate" class="form-control" />
                <span asp-validation-for="Car.ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(function () {
        $("#vin").on("keyup blur", function () {
            if (validateVin($("#vin").val())) {
                console.log("That's a VIN")
                $("#result").html("");
            }
            else {
                if (vin.length > 0) {
                    $("#result").html("Not a VIN");
                }
        }).trigger("blur");
    });

    function validateVin(vin) {
            var re = new RegExp("^[A-HJ-NPR-Z\\d]{8}[\\dX][A-HJ-NPR-Z\\d]{2}\\d{6}$");
            return vin.match(re);
        
    }
</script>